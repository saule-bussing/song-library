<h1 style = "color: blue;">Listing songs</h1>

<table>
  <thead>
    <tr>
      <th style= "font-family:arial;color:black;">Name</th>
      <th style= "font-family:arial;color:black;">Artist</th><th style= "font-family:arial;color:black;">Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <style>
        td
        {
          border-collapse:collapse;
          border:1px solid black;
        }
        td
        {
          padding:10px;
        }
      </style>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.artist %></td>
        <td><%= song.genre %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_song_path, class: "btn btn-sm btn-info" %>
